<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pirristation.Controladores.InicioControlador">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <Label text="Bienvenido" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>

    <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usuario" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Text fx:id="textoUsuario" fill="RED" text="Campo obligatorio" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="contrasena" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Text fx:id="textoContrasena" fill="RED" text="Campo obligatorio" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Text fx:id="errorInicio" fill="RED" text="Usuario o contraseña incorrectos" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Button onAction="#iniciarSesion" text="Iniciar Sesión" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
    </columnConstraints>

    <stylesheets>
        <URL value="@css/general.css" />
    </stylesheets>
</GridPane> 